<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/me_title_rl"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@drawable/movie_1"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set"
            android:padding="10dp"
            android:layout_alignParentEnd="true" />
    <RelativeLayout
        android:id="@+id/Rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/frame_rent_button2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="4dp"
            app:civ_border_color="#50d1d1d1"
            android:src="@drawable/movie_1"
            android:id="@+id/me_pic_iv" />
    </RelativeLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="张三"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:paddingRight="8dp"
            android:layout_below="@+id/Rl"
            android:layout_centerHorizontal="true"
            android:id="@+id/me_name_tv" />
        <ImageView
            android:id="@+id/me_sex_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="12sp"
            android:paddingBottom="5dp"
            android:src="@drawable/man"
            android:layout_alignBottom="@+id/me_name_tv"
            android:layout_toEndOf="@+id/me_name_tv" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/me_massive_data_rl"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:src="@drawable/data" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大数据"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/darkorchid"
                    android:layout_toEndOf="@+id/imageView" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/butn_next" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_90" />
        <RelativeLayout
            android:id="@+id/me_life_rl"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:src="@drawable/money" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信用生活"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/darkorchid"
                android:layout_toEndOf="@+id/imageView2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/butn_next" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_90" />
        <RelativeLayout
            android:id="@+id/me_add_rl"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:src="@drawable/add" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加设备"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/darkorchid"
                android:layout_toEndOf="@+id/imageView3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/butn_next" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_90" />
        <RelativeLayout
            android:id="@+id/me_pass_rl"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:src="@drawable/passwd" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更改密码"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/darkorchid"
                android:layout_toEndOf="@+id/imageView4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/butn_next" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_90" />
    </LinearLayout>

</LinearLayout>