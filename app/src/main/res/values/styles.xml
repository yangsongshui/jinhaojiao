<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text">
        <item name="android:textSize">17sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_c</item>
    </style>

    <style name="text3">
        <item name="android:textSize">14sp</item>

        <item name="android:textColor">@color/darkorange</item>
    </style>

    <style name="text2">
        <item name="android:textSize">17sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkorange</item>
    </style>

    <style name="radiobutton">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/rent_text_selector</item>
    </style>

    <style name="checkbox">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center|end</item>
        <item name="android:button">@drawable/info_rb</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/rent_text_selector</item>
    </style>

    <style name="line_rb">
        <item name="android:textSize">11sp</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/line_text_rb</item>
    </style>

    <style name="home_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/lawngreen</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="home_text2">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/chocolate</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>
</resources>
